extends layout

block extraHeadElements
    link(rel="stylesheet", type="text/css", href="/stylesheets/index.css")
    style.
        .content {
            clear: both;
        }

block mainContent
    each blog in blogs
        article
            h2 #{blog.title} 
            div(class="dateAndAuthor") 
                p(style="float: left") #{blog.author} 
                p(style="float: right") #{blog.date.toString().slice(0, 15)} 
            p(class="content") #{blog.content}
            a(href=blog.url) Read
